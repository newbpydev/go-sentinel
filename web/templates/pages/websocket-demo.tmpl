{{define "title"}}WebSocket Demo | Go Sentinel{{end}}
{{define "description"}}WebSocket demo page for real-time updates{{end}}

{{define "head"}}
<style>
    /* Connection Status */
    .status {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        border-radius: 9999px;
        font-size: 0.875rem;
        font-weight: 500;
        text-transform: capitalize;
    }
    .status.connected {
        background-color: #dcfce7;
        color: #166534;
    }
    .status.disconnected {
        background-color: #fee2e2;
        color: #991b1b;
    }
    .status.connecting {
        background-color: #fef9c3;
        color: #854d0e;
    }
    .status.error {
        background-color: #fee2e2;
        color: #b91c1c;
    }

    /* Buttons */
    .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.5rem 1rem;
        border-radius: 0.375rem;
        font-weight: 500;
        transition: all 0.15s ease-in-out;
        cursor: pointer;
        border: 1px solid transparent;
    }
    .btn-primary {
        background-color: #3b82f6;
        color: white;
    }
    .btn-primary:hover {
        background-color: #2563eb;
    }
    .btn-secondary {
        background-color: #e5e7eb;
        color: #1f2937;
    }
    .btn-secondary:hover {
        background-color: #d1d5db;
    }

    /* Test Results */
    .test-results {
        margin-top: 1rem;
    }
    .test-results-list {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }
    .test-result {
        padding: 0.75rem 1rem;
        border-radius: 0.5rem;
        border: 1px solid #e5e7eb;
        display: flex;
        align-items: center;
        gap: 1rem;
        background-color: white;
    }
    .test-result.passed {
        border-left: 4px solid #10b981;
    }
    .test-result.failed {
        border-left: 4px solid #ef4444;
    }
    .test-result .test-name {
        flex: 1;
        font-weight: 500;
    }
    .test-result .test-status {
        font-size: 0.75rem;
        padding: 0.25rem 0.5rem;
        border-radius: 9999px;
        text-transform: capitalize;
    }
    .test-result.passed .test-status {
        background-color: #dcfce7;
        color: #166534;
    }
    .test-result.failed .test-status {
        background-color: #fee2e2;
        color: #991b1b;
    }
    .test-result .test-duration {
        color: #6b7280;
        font-size: 0.875rem;
    }
    .test-error {
        margin-top: 0.5rem;
        padding: 0.5rem;
        background-color: #fef2f2;
        border-radius: 0.375rem;
        color: #b91c1c;
        font-family: monospace;
        font-size: 0.875rem;
        white-space: pre-wrap;
        word-break: break-word;
    }

    /* Metrics */
    .metrics {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 1rem;
    }
    .metric {
        background-color: white;
        padding: 1rem;
        border-radius: 0.5rem;
        border: 1px solid #e5e7eb;
    }
    .metric-key {
        display: block;
        color: #6b7280;
        font-size: 0.875rem;
        margin-bottom: 0.25rem;
    }
    .metric-value {
        font-weight: 600;
        font-size: 1.25rem;
    }

    /* Notifications */
    #notification-container {
        position: fixed;
        top: 1rem;
        right: 1rem;
        z-index: 50;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        max-width: 24rem;
    }
    .notification {
        padding: 1rem;
        border-radius: 0.5rem;
        background-color: white;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        border-left: 4px solid #3b82f6;
        opacity: 1;
        transition: opacity 0.3s ease-in-out;
    }
    .notification.fade-out {
        opacity: 0;
    }
    .notification h4 {
        margin: 0 0 0.5rem 0;
        font-weight: 600;
    }
    .notification p {
        margin: 0;
        color: #4b5563;
    }
    .notification.info {
        border-left-color: #3b82f6;
    }
    .notification.success {
        border-left-color: #10b981;
    }
    .notification.warning {
        border-left-color: #f59e0b;
    }
    .notification.error {
        border-left-color: #ef4444;
    }
</style>
{{end}}

{{define "content"}}
<div class="container mx-auto px-4 py-8 max-w-6xl">
    <div class="flex justify-between items-center mb-8">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">WebSocket Demo</h1>
            <p class="mt-2 text-gray-600">Real-time test results and metrics</p>
        </div>
        <div class="flex items-center space-x-4">
            <div id="connection-status" class="status disconnected">Disconnected</div>
            <button id="connect-btn" class="btn btn-primary">
                Connect
            </button>
            <button id="send-test-btn" class="btn btn-secondary">
                Send Test
            </button>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Test Results -->
        <div class="lg:col-span-2">
            <div class="bg-white rounded-lg shadow overflow-hidden">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h2 class="text-lg font-medium text-gray-900">Test Results</h2>
                </div>
                <div class="p-6">
                    <div id="test-results" class="test-results">
                        <p class="text-gray-500">No test results available. Connect to start receiving updates.</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Metrics -->
        <div>
            <div class="bg-white rounded-lg shadow overflow-hidden">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h2 class="text-lg font-medium text-gray-900">Metrics</h2>
                </div>
                <div class="p-6">
                    <div id="metrics-container" class="metrics">
                        <p class="text-gray-500">No metrics available. Connect to start receiving updates.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Notification Container -->
<div id="notification-container"></div>
{{end}}

{{define "scripts"}}
<script type="module" src="/static/js/websocket.js"></script>
<script type="module" src="/static/js/app.js"></script>
{{end}}