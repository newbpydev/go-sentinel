{{define "pages/settings"}}
{{template "layouts/base" .}}
{{end}}

{{define "content"}}
<!-- Notification Settings -->
<section class="recent-tests">
    <div class="section-header">
        <h2>Notification Settings</h2>
    </div>
    <div class="test-table-container content-padding">
        <div class="card-content">
            <h3 class="text-lg font-medium mb-4">Test Your Notifications</h3>
            <div class="flex flex-wrap gap-3">
                <button class="btn btn-success" hx-post="/api/notifications/test?type=success">Success</button>
                <button class="btn btn-error" hx-post="/api/notifications/test?type=error">Error</button>
                <button class="btn btn-warning" hx-post="/api/notifications/test?type=warning">Warning</button>
                <button class="btn btn-info" hx-post="/api/notifications/test?type=info">Info</button>
            </div>
        </div>
    </div>
</section>

<!-- Appearance section -->
<section class="recent-tests">
    <div class="section-header">
        <h2>Appearance</h2>
    </div>
    <div class="test-table-container content-padding">
        <div class="card-content">
            <p>Appearance settings will be added in a future update.</p>
        </div>
    </div>
</section>

<!-- Behavior section -->
<section class="recent-tests">
    <div class="section-header">
        <h2>Behavior</h2>
    </div>
    <div class="test-table-container content-padding">
        <div class="card-content">
            <p>Behavior settings will be added in a future update.</p>
        </div>
    </div>
</section>
{{end}}

{{define "scripts"}}
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Test notification buttons
        const testButtons = document.querySelectorAll('.btn');
        testButtons.forEach(button => {
            button.addEventListener('click', function () {
                const type = this.classList.contains('btn-success') ? 'success' :
                    this.classList.contains('btn-error') ? 'error' :
                        this.classList.contains('btn-warning') ? 'warning' : 'info';

                // Show notification through WebSocket handler
                fetch(`/api/notifications/test?type=${type}`, {
                    method: 'POST'
                });
            });
        });
    });
</script>
{{end}}