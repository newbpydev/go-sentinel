{{define "pages/settings"}}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Go Sentinel Settings - Customize your Go Sentinel experience">
    <title>{{if .Title}}{{.Title}} | {{end}}Go Sentinel</title>
    <link rel="stylesheet" href="/static/css/main.css">
    <link rel="stylesheet" href="/static/css/components.css">
    <link rel="stylesheet" href="/static/css/toast.css">
    <!-- HTMX for dynamic interactions -->
    <script src="https://unpkg.com/htmx.org@1.9.2"></script>
    <!-- Add WebSocket extension for HTMX -->
    <script src="https://unpkg.com/htmx.org@1.9.2/dist/ext/ws.js"></script>
    <!-- Toast notification system -->
    <script src="/static/js/toast.js"></script>
</head>
<body class="dark-theme">
    <!-- Skip link for accessibility -->
    <a href="#main-content" class="skip-link">Skip to main content</a>
    
    <div class="app-container">
        <!-- Sidebar navigation -->
        <nav class="sidebar" role="navigation" aria-label="Main Navigation">
            {{template "partials/sidebar" .}}
        </nav>
        
        <!-- Main content -->
        <main id="main-content" class="main-content">
            <header class="dashboard-header">
                <h1>Settings</h1>
                <p>Customize your Go Sentinel experience</p>
            </header>
            
            <!-- Settings content -->
            <div class="dashboard-container">
                <!-- Notification Settings -->
                <section class="recent-tests">
                    <div class="section-header">
                        <h2>Notification Settings</h2>
                    </div>
                    <div class="test-table-container content-padding">
                        <div class="card-content">
                            <h3 class="text-lg font-medium mb-4">Test Your Notifications</h3>
                            <div class="flex flex-wrap gap-3">
                                <button class="btn btn-success" hx-post="/api/notifications/test?type=success">Success</button>
                                <button class="btn btn-error" hx-post="/api/notifications/test?type=error">Error</button>
                                <button class="btn btn-warning" hx-post="/api/notifications/test?type=warning">Warning</button>
                                <button class="btn btn-info" hx-post="/api/notifications/test?type=info">Info</button>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Appearance section -->
                <section class="recent-tests">
                    <div class="section-header">
                        <h2>Appearance</h2>
                    </div>
                    <div class="test-table-container content-padding">
                        <div class="card-content">
                            <p>Appearance settings will be added in a future update.</p>
                        </div>
                    </div>
                </section>

                <!-- Behavior section -->
                <section class="recent-tests">
                    <div class="section-header">
                        <h2>Behavior</h2>
                    </div>
                    <div class="test-table-container content-padding">
                        <div class="card-content">
                            <p>Behavior settings will be added in a future update.</p>
                        </div>
                    </div>
                </section>
            </div>
        </main>
    </div>
    
    <!-- JavaScript for client-side functionality -->
    <script src="/static/js/main.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Test notification buttons
            const testButtons = document.querySelectorAll('.btn');
            testButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const type = this.classList.contains('btn-success') ? 'success' :
                                this.classList.contains('btn-error') ? 'error' :
                                this.classList.contains('btn-warning') ? 'warning' : 'info';
                    
                    // Show notification through WebSocket handler
                    fetch(`/api/notifications/test?type=${type}`, {
                        method: 'POST'
                    });
                });
            });
        });
    </script>
    {{template "partials/toast-container" .}}
</body>
</html>
{{end}}
