{{define "pages/reports"}}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Go Sentinel Reports - View and analyze your reports">
    <title>{{if .Title}}{{.Title}} | {{end}}Go Sentinel</title>
    <link rel="stylesheet" href="/static/css/main.css">
    <link rel="stylesheet" href="/static/css/components.css">
    <link rel="stylesheet" href="/static/css/toast.css">
    <script src="https://unpkg.com/htmx.org@1.9.2"></script>
    <script src="https://unpkg.com/htmx.org@1.9.2/dist/ext/ws.js"></script>
    <!-- Toast notification system -->
    <script src="/static/js/toast.js"></script>
</head>
<body class="dark-theme">
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <div class="app-container">
        <nav class="sidebar" role="navigation" aria-label="Main Navigation">
            {{template "partials/sidebar" .}}
        </nav>
        <main id="main-content" class="main-content">
            <header class="dashboard-header">
                <h1>{{.Title}}</h1>
                <p>{{if .Subtitle}}{{.Subtitle}}{{else}}View and analyze your Go Sentinel reports{{end}}</p>
            </header>
            <div class="dashboard-container">
                <!-- Available Reports Section -->
                <section class="recent-tests">
                    <div class="section-header">
                        <h2>Available Reports</h2>
                        <button class="run-all-button" aria-label="Generate Report">
                            Generate Report
                        </button>
                    </div>
                    <div class="test-table-container content-padding">
                        <table class="test-table">
                            <thead>
                                <tr>
                                    <th>Report Name</th>
                                    <th>Type</th>
                                    <th>Generated</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Weekly Test Summary</td>
                                    <td>Summary</td>
                                    <td>May 10, 2025</td>
                                    <td><span class="status-badge passed">Complete</span></td>
                                    <td>
                                        <button class="run-button">View</button>
                                        <button class="run-button">Download</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Performance Trends</td>
                                    <td>Analysis</td>
                                    <td>May 8, 2025</td>
                                    <td><span class="status-badge passed">Complete</span></td>
                                    <td>
                                        <button class="run-button">View</button>
                                        <button class="run-button">Download</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Failure Analysis</td>
                                    <td>Analysis</td>
                                    <td>May 5, 2025</td>
                                    <td><span class="status-badge passed">Complete</span></td>
                                    <td>
                                        <button class="run-button">View</button>
                                        <button class="run-button">Download</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </section>
                
                <!-- Report Configuration Section -->
                <section class="recent-tests">
                    <div class="section-header">
                        <h2>Report Configuration</h2>
                    </div>
                    <div class="test-table-container content-padding">
                        <div class="card-content">
                            <p>Configure report generation settings and schedules.</p>
                            <div class="mt-4">
                                <h3 class="text-lg font-medium mb-4">Report Types</h3>
                                <div class="flex flex-wrap gap-3">
                                    <button class="btn btn-success">Summary</button>
                                    <button class="btn btn-info">Analysis</button>
                                    <button class="btn btn-warning">Comparison</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </main>
    </div>
    <script src="/static/js/main.js"></script>
    {{template "partials/toast-container" .}}
</body>
</html>
{{end}}
