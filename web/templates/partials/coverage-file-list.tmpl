{{define "partials/coverage-file-list"}}
{{if .Files}}
<table class="coverage-table">
    <thead>
        <tr>
            <th class="file-column">File</th>
            <th class="coverage-column">Coverage</th>
            <th class="lines-column">Lines</th>
            <th class="functions-column">Functions</th>
            <th class="branches-column">Branches</th>
            <th class="actions-column">Actions</th>
        </tr>
    </thead>
    <tbody>
        {{range .Files}}
        <tr class="coverage-file-row {{if lt .LineCoverage 50.0}}low-coverage{{else if lt .LineCoverage 80.0}}medium-coverage{{else}}high-coverage{{end}}">
            <td class="file-name">
                <span class="file-path">{{.FilePath}}</span>
            </td>
            <td class="coverage-value">
                <div class="coverage-bar">
                    <div class="coverage-fill" style="width: {{.LineCoverage}}%;"></div>
                </div>
                <span class="coverage-percent">{{printf "%.1f" .LineCoverage}}%</span>
            </td>
            <td class="lines-value">{{.CoveredLines}}/{{.TotalLines}}</td>
            <td class="functions-value">{{.CoveredFunctions}}/{{.TotalFunctions}}</td>
            <td class="branches-value">{{.CoveredBranches}}/{{.TotalBranches}}</td>
            <td class="file-actions">
                <button class="btn btn-small btn-primary" 
                        hx-get="/api/coverage/file/{{.FileID}}" 
                        hx-target="#file-coverage-content"
                        hx-trigger="click"
                        onclick="showFileDetails()">
                    View
                </button>
            </td>
        </tr>
        {{end}}
    </tbody>
</table>

{{if gt .TotalPages 1}}
<div class="pagination">
    <button class="pagination-btn {{if eq .CurrentPage 1}}disabled{{end}}"
            {{if gt .CurrentPage 1}}
            hx-get="/api/coverage/files?page={{sub .CurrentPage 1}}&filter={{.Filter}}&search={{.Search}}"
            hx-target="#coverage-list"
            {{end}}
            {{if eq .CurrentPage 1}}disabled{{end}}>
        Previous
    </button>
    
    <span class="pagination-info">Page {{.CurrentPage}} of {{.TotalPages}}</span>
    
    <button class="pagination-btn {{if eq .CurrentPage .TotalPages}}disabled{{end}}"
            {{if lt .CurrentPage .TotalPages}}
            hx-get="/api/coverage/files?page={{add .CurrentPage 1}}&filter={{.Filter}}&search={{.Search}}"
            hx-target="#coverage-list"
            {{end}}
            {{if eq .CurrentPage .TotalPages}}disabled{{end}}>
        Next
    </button>
</div>
{{end}}

{{else}}
<div class="no-files-message">
    <p>No files match your current filter criteria.</p>
    <button class="btn btn-primary" 
            hx-get="/api/coverage/files" 
            hx-target="#coverage-list">
        Reset Filters
    </button>
</div>
{{end}}
{{end}}
