{{define "layouts/base"}}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description"
        content="{{if .Description}}{{.Description}}{{else}}Go Sentinel - Monitor and manage your Go tests{{end}}">
    <title>{{if .Title}}{{.Title}} | {{end}}Go Sentinel</title>
    <link rel="stylesheet" href="/static/css/main.css">
    <link rel="stylesheet" href="/static/css/components.css">
    <link rel="stylesheet" href="/static/css/toast.css">
    <!-- HTMX for dynamic interactions -->
    <script src="https://unpkg.com/htmx.org@1.9.2"></script>
    <!-- Add WebSocket extension for HTMX -->
    <script src="https://unpkg.com/htmx.org@1.9.2/dist/ext/ws.js"></script>
    <!-- Toast notification system -->
    <script src="/static/js/toast.js"></script>
    {{block "head" .}}{{end}}
</head>

<body class="dark-theme">
    <!-- Skip link for accessibility -->
    <a href="#main-content" class="skip-link">Skip to main content</a>

    <div class="app-container">
        <!-- Sidebar navigation -->
        <nav class="sidebar" role="navigation" aria-label="Main Navigation">
            {{template "partials/sidebar" .}}
        </nav>

        <!-- Main content -->
        <main id="main-content" class="main-content">
            <header class="dashboard-header">
                <h1>{{.Title}}</h1>
                <p>{{if .Subtitle}}{{.Subtitle}}{{else}}Monitor your Go test results in real-time{{end}}</p>
                {{block "header-extras" .}}{{end}}
            </header>

            <!-- Main content container -->
            <div class="dashboard-container">
                {{block "content" .}}
                {{end}}
            </div>
        </main>
    </div>

    <script src="/static/js/main.js"></script>
    {{block "scripts" .}}{{end}}
    {{template "partials/toast-container" .}}
</body>

</html>
{{end}}