{
  "name": "go-sentinel-js",
  "version": "1.0.0",
  "private": true,
  "description": "Go Sentinel Frontend JavaScript",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "test": "vitest",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint . --ext .js",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "keywords": [
    "go-sentinel",
    "testing",
    "test-automation"
  ],
  "author": "Go Sentinel Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@8.6.0",
  "dependencies": {
    "htmx.org": "^1.9.6"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vitest": "^0.5.4",
    "happy-dom": "^14.10.1",
    "husky": "^9.0.0",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0",
    "vite": "^5.0.0",
    "vitest": "^1.6.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
