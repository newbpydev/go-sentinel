{
  "name": "go-sentinel-js",
  "version": "1.0.0",
  "private": true,
  "description": "Go Sentinel Frontend JavaScript",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "test": "vitest",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint . --ext .js",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "keywords": [
    "go-sentinel",
    "testing",
    "test-automation"
  ],
  "author": "Go Sentinel Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@8.6.0",
  "dependencies": {
    "htmx.org": "^1.9.12"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@vitest/coverage-v8": "^3.1.3",
    "@vitest/eslint-plugin": "^1.2.0",
    "@vitest/ui": "^3.1.3",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "happy-dom": "^17.4.7",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "vite": "^6.3.5",
    "vitest": "^3.1.3"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
